<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#F6F4EB"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F6F4EB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/car_model"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="90"
                android:fontFamily="@font/calibri"
                android:text="Model"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/car_rating"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@drawable/light_orange_rounded_shape"
                android:drawableLeft="@drawable/ic_star_yellow_24dp"
                android:drawablePadding="4dp"
                android:fontFamily="@font/calibri"
                android:padding="6dp"
                android:text="4.5"
                android:textAlignment="center"
                android:textColor="#ffc32d"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/car_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/calibri"
            android:text="Year â€¢ Class"
            android:textColor="#a4a7b5"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/seat_icon" />

            <TextView
                android:id="@+id/car_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:fontFamily="@font/calibri"
                android:text="Seats"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/gate_icon" />

            <TextView
                android:id="@+id/car_doors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:fontFamily="@font/calibri"
                android:text="Doors"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/car_image"
            android:layout_width="344dp"
            android:layout_height="259dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitCenter" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/car_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:text="$210"
                android:textColor="#3f9dff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/car_price"
                android:layout_alignRight="@id/car_price"
                android:layout_marginEnd="-48dp"
                android:layout_marginRight="-48dp"
                android:fontFamily="@font/calibri"
                android:text="per day"
                android:textColor="#8ac3ff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/carInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/blue_rounded_shape"
                android:fontFamily="@font/calibri"
                android:padding="8dp"
                android:text="Book Now"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
